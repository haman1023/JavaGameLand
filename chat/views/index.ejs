<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <meta name="robots" content="noindex, nofollow" />
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta http-equiv="Content-Script-Type" content="text/javascript" />
  <meta http-equiv="Content-Style-Type" content="text/css" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta http-equiv="Cache-Control" content="No-Cache" />
  <meta http-equiv="Pragma" content="No-Cache" />
  <script src="/javascript/jquery-1.9.1.js"></script>
  <script src="/javascript/jquery-ui-1.10.3.custom.min.js"></script>
  <script src="/javascript/jquery.cookie.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <link rel="stylesheet" href="stylesheets/mafia.css">
  <script>
    var socket = io.connect();
    socket.on('connect', function() {
      var user = prompt("닉네임을 입력해주세요");
      var grade = prompt("등급을 입력해주세요", "1,2,3만 가능");
      socket.emit('guestjoin', user, 'lobby');
    });

    socket.on('existID', function() {
      alert("이미 존재하는 닉네임 입니다.");
      alert("익명으로 입장합니다.");
    });

    socket.on('recvmsg', function(username, data) {
      var bTag = document.createElement("B");
      var user = document.createTextNode(username + " : " + data);
      var brTag = document.createElement("BR");
      bTag.appendChild(user);
      bTag.appendChild(brTag);
      document.getElementById("main_chat").appendChild(bTag);
      if ($('.main_chat').prop('scrollHeight') > $('.main_chat').height())
        $('.main_chat').scrollTop($('.main_chat').prop('scrollHeight'));
    });

    socket.on('servernoti', function(col, data) {
      $('#main_chat').append('<b><font color=' + col + '>' + data + '</font></b><br>');
      if ($('.main_chat').prop('scrollHeight') > $('.main_chat').height())
        $('.main_chat').scrollTop($('.main_chat').prop('scrollHeight'));
    });

    socket.on('updateuser', function(usernames) {
      $('.user_list').empty();
      $.each(usernames, function(key, value) {
        $('.user_list').append('<div>' + value + '</div>');
      });
    });

    $(function() {
      $('#data').keypress(function(e) {
        if (e.which == 13) {
          $(this).blur();
          $('#datasend').focus().click();
          $('#data').focus();
        }
      });

      $('#datasend').click(function() {
        var message = $('#data').val();
        $('#data').val('');
        socket.emit('sendmsg', message);
      });
    });
  </script>
</head>

<body>
  <div id="wrap">
    <div id="mainDiv">
      <div style="float:left; width:20%; height:250px;">
        <div class="user_list" style="width:100%;height:250px; overflow: auto;"></div>
      </div>
      <div class="main_chat" style="float:left;width:80%;height:250px; overflow: auto;">
        <div id="main_chat"></div>
      </div>
      <div>
        <input id="data" style="width:80%; overflow:hidden;" />
        <input type="button" id="datasend" value="send" />
      </div>
    </div>
  </div>
</body>

</html>
